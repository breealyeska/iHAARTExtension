<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape>
			<solid
					android:color="#343434"/>
			<stroke
					android:width="1dp"
					android:color="#171717"/>
			<corners
					android:radius="9dp"/>
			<padding
					android:left="10dp"
					android:top="10dp"
					android:right="10dp"
					android:bottom="10dp"/>
		</shape>
	</item>
	<item>
		<shape>
			<gradient
					android:startColor="#ff7c7c7c"
					android:endColor="#ff2f2f2f"
					android:angle="270"/>
			<stroke
					android:width="1dp"
					android:color="#171717"/>
			<corners
					android:radius="10dp"/>
			<padding
					android:left="10dp"
					android:top="10dp"
					android:right="10dp"
					android:bottom="10dp"/>
		</shape>
	</item>
</selector>